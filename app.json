{
  "expo": {
    "name": "Kurye Uygulaması",
    "slug": "kurye-app",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E63946"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kuryeapp.delivery",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Bu uygulama sipariş teslimatı için konum bilgilerinizi kullanır.",
        "NSCameraUsageDescription": "Teslimat kanıtı için fotoğraf çekmenize izin verir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E63946"
      },
      "package": "com.kuryeapp.delivery",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CALL_PHONE"
      ],
      "newArchEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Kurye App",
      "shortName": "Kurye",
      "display": "standalone",
      "backgroundColor": "#E63946",
      "description": "Kurye ve İşletme Yönetim Uygulaması",
      "themeColor": "#E63946",
      "startUrl": "/",
      "scope": "/",
      "orientation": "portrait"
    },
    "plugins": [],
    "extra": {
      "eas": {
        "projectId": "d3c8740a-97e6-40a8-9acc-e8edbe96baaa"
      }
    }
  }
}